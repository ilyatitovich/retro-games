---
import Layout from "../layouts/Layout.astro";
import MobileControls from "../components/MobileControls.astro";
---

<script>
  import { initGame } from "../games/snake/snake";
  initGame();
</script>

<Layout>
  <main>
    <h1>Snake game</h1>
    <div id="score">Score: 0</div>
    <div class="game-container">
      <canvas id="canvas" width="400" height="400"></canvas>
    </div>
    <MobileControls />
  </main>
</Layout>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100vh;
    margin: 0 auto;
    background-color: #1a2a1a;
    font-family: "Courier New", Courier, monospace;
    color: #4aff4a;
  }

  canvas {
    width: 100%;
    height: auto;
    display: block;
    margin: 0 auto;
    border: 2px solid #4aff4a;
    background-color: #1a2a1a;
    image-rendering: pixelated;
  }

  #score {
    font-size: 24px;
    margin-bottom: 10px;
    text-shadow: 0 0 5px #4aff4a;
  }
</style>
