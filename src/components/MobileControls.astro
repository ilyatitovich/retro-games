<script>
  document.querySelectorAll("#mobile-controls button").forEach((btn) => {
    btn.addEventListener("click", () => {
      const dir = btn.getAttribute("data-dir");
      if (!dir) return;

      let key: string | null = null;
      switch (dir) {
        case "up":
          key = "ArrowUp";
          break;
        case "down":
          key = "ArrowDown";
          break;
        case "left":
          key = "ArrowLeft";
          break;
        case "right":
          key = "ArrowRight";
          break;
        case "enter":
          key = "Enter";
          break;
      }

      if (key) {
        const event = new KeyboardEvent("keydown", {
          key,
          bubbles: true,
          cancelable: true,
        });
        window.dispatchEvent(event);
      }
    });
  });
</script>

<div id="mobile-controls">
  <div class="dpad-row">
    <button data-dir="up">↑</button>
  </div>
  <div class="dpad-row">
    <button data-dir="left">←</button>
    <button data-dir="enter">⏎</button>
    <button data-dir="right">→</button>
  </div>
  <div class="dpad-row">
    <button data-dir="down">↓</button>
  </div>
</div>

<style>
  #mobile-controls {
    position: fixed;
    bottom: 1rem;
    left: 50%;
    transform: translateX(-50%);
    display: grid;
    gap: 0.5rem;
    z-index: 10;
    user-select: none;
  }

  @media (min-width: 768px) {
    #mobile-controls {
      display: none;
    }
  }

  .dpad-row {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
  }

  #mobile-controls button {
    width: 60px;
    height: 44px;
    font-size: 24px;
    border-radius: 12px;
    border: none;
    background-color: #2c2c2c;
    color: #fff;
  }
</style>
